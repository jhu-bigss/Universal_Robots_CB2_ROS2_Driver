# figure out if this file is where it was configured (build tree) or
# not (installed tree)
set (URInterface_CMAKE_CONFIG_FILE "@URInterface_CMAKE_CONFIG_FILE@")
get_filename_component (THIS_FILE_PATH
                        ${CMAKE_CURRENT_LIST_FILE}
                        REALPATH)

if ("${URInterface_CMAKE_CONFIG_FILE}" STREQUAL "${THIS_FILE_PATH}")
  # we're using the build directories
  set (URInterface_INCLUDE_DIR "@URInterface_INCLUDE_DIR@")
  set (URInterface_LIBRARY_DIR "@URInterface_LIBRARY_DIR@")
else ()
  # try to find the install dir, we know the install is using
  # share/URInterface so we can go ../..
  set (RELATIVE_INSTALL_DIR "${THIS_FILE_PATH}/../..")
  get_filename_component (ABSOLUTE_INSTALL_DIR "${RELATIVE_INSTALL_DIR}" ABSOLUTE)
  # set directories using the install dir
  set (URInterface_INCLUDE_DIR "${ABSOLUTE_INSTALL_DIR}/include")
  set (URInterface_LIBRARY_DIR "${ABSOLUTE_INSTALL_DIR}/lib")
endif ()

set (URInterface_LIBRARIES   "@URInterface_LIBRARIES@")

